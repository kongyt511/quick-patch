{
  	"name": "quick-patch",
	"displayName": "Quick Patch",
	"description": "",
	"version": "0.0.1",
	"publisher": "JumpDeveloper",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "QuickPatch",
			"properties": {
				"quick_patch.adb_path": {
					"type": "string",
					"default": "adb",
					"description": "adb工具路径"
				},
				"quick_patch.dest_path": {
					"type": "string",
					"default": "/storage/emulated/0/Android/data/xxxxxx/files",
					"description": "补丁推送的目的路径"
				},
				"quick_patch.patch_dir": {
					"type": "string",
					"default": "debug",
					"description": "补丁根目录"
				},
				"quick_patch.scripts_dir": {
					"type": "string",
					"default": "Scripts",
					"description": "脚本根目录"
				}
			}
		},
		"commands": [
			{
				"command": "quick_patch_send",
				"title": "Quick Patch"
			},
			{
				"command": "quick_patch_clear",
				"title": "Clear Patch"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "quick_patch_send",
					"group": "z_commands",
					"when": "!explorerResourceIsFolder"
				},
				{
					"command": "quick_patch_clear",
					"group": "z_commands",
					"when": "filesExplorerFocus"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.65.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.2"
	}
}
